<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".WeatherQueryActivity" >

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/weatherquery_userquerytxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="User Query" />

        <TextView
            android:id="@+id/weatherquery_serverquerytxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Server Query" />

        <FrameLayout
            android:id="@+id/forecastframelayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.41" >

            <LinearLayout
                android:id="@+id/singleday_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent" 
                android:orientation="horizontal">
            </LinearLayout>

            <LinearLayout
                android:id="@+id/fiveday_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent" 
                android:orientation= "horizontal">

            </LinearLayout>

        </FrameLayout>

        <Button
            android:id="@+id/weatherquery_sethomebutton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Set as Home" />

    </LinearLayout>

</RelativeLayout>